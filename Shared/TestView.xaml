<?xml version="1.0" encoding="UTF-8"?>
<pbXForms:ModalContentView
    xmlns = "http://xamarin.com/schemas/2014/forms"
    xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pbXForms = "clr-namespace:pbXForms;assembly=pbXForms"
    xmlns:T = "clr-namespace:pbXForms;assembly=pbXForms"
    xmlns:local = "clr-namespace:SafeNotebooks"
    x:Class = "SafeNotebooks.TestView"
    BackgroundColor = "Fuchsia"
    BindingContext = "{x:Static local:TestView.Model}">

    <ContentView.Content>

        <StackLayout
            Padding="30, 0, 30, 0"
            Style = "{StaticResource stVerticalNoSpaces}">

            <Label
                Text = "{Binding ModelTestProperty}" />

            <Label
                Text = "{x:Static local:TestView.TestProperty}" />

            <Label
                Text = "to jest test!!!" />

            <Label
                Text = "to jest test!!!" />

            <pbXForms:ButtonEx
                Text = "back"
                TextColor="{StaticResource AccentTextColor}"
                Clicked = "Hide_Clicked" />

            <Button
                BackgroundColor="White"
                Text = "master show"
                Clicked = "MS_Clicked" />

            <Button
                BackgroundColor="Transparent"
                Text = "master hide"
                Clicked = "MH_Clicked" />

        </StackLayout>

    </ContentView.Content>

</pbXForms:ModalContentView>
