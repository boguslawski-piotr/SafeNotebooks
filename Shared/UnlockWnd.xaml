<?xml version="1.0" encoding="UTF-8"?>
<pbXForms:ContentPage
	xmlns = "http://xamarin.com/schemas/2014/forms"
	xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:pbXForms = "clr-namespace:pbXForms;assembly=pbXForms"
	xmlns:T = "clr-namespace:pbXForms;assembly=pbXForms"
	x:Class = "SafeNotebooks.UnlockWnd"
	BackgroundColor = "{StaticResource AppBarBackgroundColor}">

	<pbXForms:ContentPage.ViewContent>

		<StackLayout
			x:Name = "_View"
			Orientation = "Vertical"
			VerticalOptions = "CenterAndExpand"
			HorizontalOptions = "Center"
			Padding = "0"
			Margin = "0"
			Spacing = "0">

			<Image
				x:Name = "_Logo"
				WidthRequest = "112"
				HeightRequest = "112"
				Aspect = "AspectFit"
				Margin = "20, 0, 20, 8"
				Source = "icon.png" />

			<Label
				Text = "{T:Localized AppName}"
				FontSize = "Large"
				HorizontalTextAlignment = "Center" />

			<Image
				x:Name = "_FPIcon"
				IsVisible = "false"
				Margin = "20,20,20,0"
				Aspect = "AspectFit"
				Source = "ic_fingerprint.png" />

			<Label
				x:Name = "_Message"
				IsVisible = "false"
				Margin = "20,20,20,8"
				HorizontalTextAlignment = "Center" />

			<pbXForms:PIButton
				x:Name = "_UnlockOrCancelBtn"
				IsVisible = "false"
				TextColor = "{StaticResource AccentTextColor}"
				FontSize = "Large"
				Clicked = "UnlockBtn_Clicked" />

		</StackLayout>

	</pbXForms:ContentPage.ViewContent>

</pbXForms:ContentPage>
