<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="SafeNotebooks.ListOfNotes"
	Title="[page name]">
	
	<ContentPage.ToolbarItems>
        <ToolbarItem
			x:Name="SearchBtn"
			Text="ðŸ”"
			Clicked="SearchBtn_Clicked"
            Order="Primary"
		>
        </ToolbarItem>
    </ContentPage.ToolbarItems>	

	<StackLayout
		Orientation="Vertical"
		VerticalOptions="FillAndExpand"
		HorizontalOptions="FillAndExpand"
		Padding="0,0"
		Spacing="0"
	>

		<SearchBar
			IsVisible="false"
			x:Name="Search"
			Placeholder="search"
		/>

		<ListView>
		</ListView>

		<!-- bottom toolbar -->
		
		<!-- TODO: color (lighter) from theme -->
		
		<StackLayout
			Orientation="Horizontal"
			HorizontalOptions="Fill"
			Padding="0,0"
			Spacing="0"
			BackgroundColor="#efefef"
		>
			<StackLayout
				Orientation="Horizontal"
				HorizontalOptions="CenterAndExpand"
				Padding="10,0"
				Spacing="20"
			>
				
				<Button 
					Text="New..." 
					HorizontalOptions="FillAndExpand"
				/>
				<Button 
					Text="New note" 
				/>

			</StackLayout>
		</StackLayout>
		
	</StackLayout>

</ContentPage>
