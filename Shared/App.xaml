<?xml version="1.0" encoding="utf-8"?>
<Application 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="SafeNotebooks.App">

	<Application.Resources>
		
		<ResourceDictionary>
			<!-- ANDROID: When modifying this value you must also remember to update the "colorPrimaryDark" value in the "Resources/Values/styles.xml" file. -->
			<Color x:Key="StatusBarBackgroundColor">#303f9f</Color>
			
			<Color x:Key="AppBarBackgroundColor">#3151b5</Color>
			<Color x:Key="AppBarTextColor">#ffffff</Color>

			<Color x:Key="ToolBarBackgroundColor">#3151b5</Color>
			<Color x:Key="ToolBarTextColor">#ffffff</Color>

			<Color x:Key="NavDrawerBackgroundColor">#FAFAFA</Color>
			<Color x:Key="ListOfNotesBackgroundColor">#ffffff</Color>

			<Color x:Key="AccentTextColor">#FF5722</Color>
			
			<Color x:Key="ListItemsDividerColor">#C5CAE9</Color>			

			<!-- TODO: how to use values from Metrics class in XAML? -->
			<x:Double x:Key="ToolBarItemsSpacing">24</x:Double>
			
		</ResourceDictionary>
		
	</Application.Resources>
</Application>
